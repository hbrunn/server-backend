<odoo>

<record id="view_push_notification_send_form" model="ir.ui.view">
    <field name="model">push.notification.send</field>
    <field name="arch" type="xml">
        <form>
            <group>
                <field name="title" />
                <field name="text" />
                <field name="asynchronous" />
            </group>
            <footer>
                <button
                        type="object"
                        name="action_send"
                        string="Send"
                        class="btn-primary"
                    />
                <button special="cancel" string="Cancel" />
            </footer>
        </form>
    </field>
</record>

<record id="action_push_notification_send_registrations" model="ir.actions.act_window">
    <field name="name">Send notification</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">push.notification.send</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
    <field name="binding_model_id" ref="model_push_notification_registration" />
    <field name="binding_view_types">list</field>
</record>

</odoo>
